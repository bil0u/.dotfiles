# -- PATH --

PATH="/bin:/usr/bin"

# Standard entries
export PATH="/sbin:$PATH"
export PATH="/usr/sbin:$PATH"
export PATH="/usr/local/bin:$PATH"

# Custom
export PATH="$HOME/.bin:$PATH"
export PATH="$HOME/.brew/bin:$PATH"

# Python 3 > 2
export PATH="/usr/local/sbin:$PATH"
export PATH="/usr/local/opt/python/libexec/bin:$PATH"

# Prefs

export EDITOR="vim"
export LC_ALL="en_US.UTF-8"
export LANG="en_US.UTF-8"
export DOTFILES_DIR="$HOME/.dotfiles"

# -- ZSH --

export ZSH="$HOME/.oh-my-zsh"
export UPDATE_ZSH_DAYS=7

ZSH_CUSTOM="$HOME/.zsh"
ZSH_THEME="powerlevel10k/powerlevel10k"

COMPLETION_WAITING_DOTS=true

# -- PROMPT --


POWERLEVEL9K_MODE="nerdfont-complete"

POWERLEVEL9K_SHORTEN_DIR_LENGTH=4

POWERLEVEL9K_LEFT_SEGMENT_SEPARATOR="%F{243}-%F{white}"
POWERLEVEL9K_LEFT_SUBSEGMENT_SEPARATOR="%F{243}-%F{white}"
POWERLEVEL9K_RIGHT_SEGMENT_SEPARATOR=""
POWERLEVEL9K_RIGHT_SUBSEGMENT_SEPARATOR="%F{243}-%F{white}"

POWERLEVEL9K_MULTILINE_FIRST_PROMPT_PREFIX="%F{243}\u256D\u2500%F{white}"
POWERLEVEL9K_MULTILINE_LAST_PROMPT_PREFIX="%F{243}\u2570\u2500%F{white} "

POWERLEVEL9K_PROMPT_ADD_NEWLINE=true
POWERLEVEL9K_PROMPT_ON_NEWLINE=true

POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(context root_indicator dir vcs)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status command_execution_time time battery)

# > Left prompt

POWERLEVEL9K_HOME_ICON="\uF015 "
POWERLEVEL9K_HOME_SUB_ICON="\uF07C "
POWERLEVEL9K_FOLDER_ICON="\uF115 "
POWERLEVEL9K_ETC_ICON="\uF013 "

POWERLEVEL9K_CONTEXT_TEMPLATE="%n:%m"
POWERLEVEL9K_CONTEXT_DEFAULT_BACKGROUND="clear"
POWERLEVEL9K_CONTEXT_DEFAULT_FOREGROUND="034"
POWERLEVEL9K_CONTEXT_SUDO_BACKGROUND="clear"
POWERLEVEL9K_CONTEXT_SUDO_FOREGROUND="220"
POWERLEVEL9K_CONTEXT_ROOT_BACKGROUND="clear"
POWERLEVEL9K_CONTEXT_ROOT_FOREGROUND="196"
POWERLEVEL9K_CONTEXT_REMOTE_BACKGROUND="clear"
POWERLEVEL9K_CONTEXT_REMOTE_FOREGROUND="043"
POWERLEVEL9K_CONTEXT_REMOTE_SUDO_BACKGROUND="clear"
POWERLEVEL9K_CONTEXT_REMOTE_SUDO_FOREGROUND="209"

POWERLEVEL9K_ROOT_INDICATOR_BACKGROUND="clear"
POWERLEVEL9K_ROOT_INDICATOR_FOREGROUND="196"

POWERLEVEL9K_DIR_HOME_BACKGROUND="clear"
POWERLEVEL9K_DIR_HOME_FOREGROUND="075"
POWERLEVEL9K_DIR_HOME_SUBFOLDER_BACKGROUND="clear"
POWERLEVEL9K_DIR_HOME_SUBFOLDER_FOREGROUND="081"
POWERLEVEL9K_DIR_DEFAULT_BACKGROUND="clear"
POWERLEVEL9K_DIR_DEFAULT_FOREGROUND="105"
POWERLEVEL9K_DIR_ETC_BACKGROUND="clear"
POWERLEVEL9K_DIR_ETC_FOREGROUND="126"

POWERLEVEL9K_VCS_MODIFIED_BACKGROUND="clear"
POWERLEVEL9K_VCS_MODIFIED_FOREGROUND="220"
POWERLEVEL9K_VCS_UNTRACKED_BACKGROUND="clear"
POWERLEVEL9K_VCS_UNTRACKED_FOREGROUND="208"
POWERLEVEL9K_VCS_CLEAN_BACKGROUND="clear"
POWERLEVEL9K_VCS_CLEAN_FOREGROUND="040"

# > Right prompt

POWERLEVEL9K_STATUS_OK_BACKGROUND="clear"
POWERLEVEL9K_STATUS_OK_FOREGROUND="034"
POWERLEVEL9K_STATUS_ERROR_BACKGROUND="clear"
POWERLEVEL9K_STATUS_ERROR_FOREGROUND="124"

POWERLEVEL9K_COMMAND_EXECUTION_TIME_BACKGROUND="clear"
POWERLEVEL9K_COMMAND_EXECUTION_TIME_FOREGROUND="171"

POWERLEVEL9K_TIME_BACKGROUND="clear"
POWERLEVEL9K_TIME_FOREGROUND="187"

source ~/.dotfiles/prefs/zsh/themes/powerlevel10k/powerlevel10k.zsh-theme

plugins=(git)

# -- SOURCING OH MY ZSH --

ZSH_DISABLE_COMPFIX=true
source "$ZSH/oh-my-zsh.sh"

# -- JAVA SUPPORT --

export JAVA_HOME=$(/usr/libexec/java_home)

# -- PYTHON --

export WORKON_HOME=$HOME/.virtualenvs
export PROJECT_HOME=$HOME/dev/projects

source /usr/local/bin/virtualenvwrapper.sh
