{{-   $config | toYaml }}
{{- else if stat (joinPath .chezmoi.sourceDir ".chezmoidata.toml") }}
{{-   $config | toToml }}
{{- else if stat (joinPath .chezmoi.sourceDir ".chezmoidata.ini") }}
{{-   $config | toIni }}
{{- end }}